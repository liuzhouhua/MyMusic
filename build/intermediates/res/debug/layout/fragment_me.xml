<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:id="@+id/userlayout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/default_cover">
        <ImageView 
            android:id="@+id/useravater"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/default_user"
            />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_text"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:paddingTop="10dp"/>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:id="@+id/localmusic"
        android:background="@drawable/backlayout">
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_mytrack"
            android:layout_gravity="center"
            android:paddingLeft="10dp"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/local_music_text"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            />
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">            
        </LinearLayout>
        <TextView 
            android:id="@+id/display_localmusic_count"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/local_music_count"
            android:layout_marginRight="10dp"
            android:gravity="center"/>
    </LinearLayout>
    
    <ImageView 
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:src="@drawable/line"/>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:id="@+id/myfavor">
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_myfavor"
            android:layout_gravity="center"
            android:paddingLeft="10dp"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/myfavor"
            android:gravity="center"
            android:layout_marginLeft="10dp"/>
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            
        </LinearLayout>
        <TextView 
            android:id="@+id/myfavor_music_count"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/local_music_count"
            android:layout_marginRight="10dp"
            android:gravity="center"/>
    </LinearLayout>
    <ImageView 
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:src="@drawable/line"/>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:id="@+id/downloadmusic"
        android:paddingLeft="10dp">
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_download"
            android:layout_gravity="center"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/download_music"
            android:gravity="center"
            android:layout_marginLeft="10dp"/>
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            
        </LinearLayout>
        <TextView 
            android:id="@+id/download_music_count"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/local_music_count"
            android:layout_marginRight="10dp"
            android:gravity="center"/>
    </LinearLayout>
    
    <ImageView 
        android:layout_width="match_parent"
        android:layout_height="17dp"
        android:background="#ececec"/>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mymuzikland"
            android:layout_gravity="center"
            android:paddingLeft="10dp"/>
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"></LinearLayout>
        <ImageView
            android:id="@+id/add_list_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_menu_add_queue"
            android:layout_marginRight="5dp"
            android:padding="5dp"/>
        <ImageView
            android:id="@+id/edit_list_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_list_edit"
            android:layout_marginRight="5dp"
            android:padding="5dp"/>
    </LinearLayout>
    <ImageView 
        android:layout_width="match_parent"
        android:layout_height="6dip"
        android:src="@drawable/line"/>
    

</LinearLayout>
